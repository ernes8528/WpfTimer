<Window x:Class="WpfTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTimer"
        mc:Ignorable="d"
        Title="Timer" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TimeDisplay" FontSize="32" HorizontalAlignment="Center"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StarButton" Content="Star" Width="75" Click="StarButton_Click"></Button>
                <Button x:Name="PauseButton" Content="Pause" Width="75" Click="PauseButton_Click"></Button>
                <Button x:Name="StopButton" Content="Stop" Width="75" Click="StopButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
